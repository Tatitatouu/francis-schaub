# Gestion des répertoires
<IfModule mod_dir.c>
    DirectoryIndex index.html index.htm
</IfModule>

# Compression GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
    AddEncodingByType deflate text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# Compression Brotli (si disponible)
<IfModule mod_brotli.c>
    AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# Cache control avec Vary header
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images (long cache)
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS et JavaScript (medium cache)
    ExpiresByType text/css "access plus 30 days"
    ExpiresByType application/javascript "access plus 30 days"
    ExpiresByType text/javascript "access plus 30 days"
    ExpiresByType application/x-javascript "access plus 30 days"
    
    # Fonts (long cache)
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # HTML (no cache)
    ExpiresByType text/html "access plus 0 days"
    
    # Par défaut
    ExpiresDefault "access plus 2 days"
</IfModule>

# Headers pour la sécurité et la performance
<IfModule mod_headers.c>
    # Sécurité
    Header set X-UA-Compatible "IE=edge"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    Header set Content-Security-Policy "default-src 'self' https://www.googletagmanager.com https://www.google-analytics.com https://fonts.googleapis.com https://fonts.gstatic.com; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com"
    
    # Performance
    Header set Cache-Control "public, max-age=31536000" "expr=%{CONTENT_TYPE} =~ m#image/#"
    Header set Cache-Control "public, max-age=2592000" "expr=%{CONTENT_TYPE} =~ m#(application/javascript|text/css)#"
    Header set Cache-Control "public, max-age=86400" "expr=%{CONTENT_TYPE} =~ m#font#"
    Header set Cache-Control "public, max-age=0, must-revalidate" "expr=%{CONTENT_TYPE} =~ m#text/html#"
    
    # Compression
    Header set Vary "Accept-Encoding"
    
    # CORS pour les fonts
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|svg)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Supprimer ETags pour la cohérence du cache
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Réécriture d'URL pour React Router
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # HTTPS redirect (si nécessaire, décommenter)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Rediriger les anciennes URLs vers les nouvelles (compatibilité SEO)
    RewriteRule ^plomberie$ /sanitaire/plomberie [L,R=301]
    RewriteRule ^chauffage$ /sanitaire/chauffage [L,R=301]
    RewriteRule ^energies-renouvelables$ /sanitaire/energies-renouvelables [L,R=301]
    RewriteRule ^salle-de-bains$ /sanitaire/salle-de-bains [L,R=301]
    RewriteRule ^realisations$ /sanitaire/realisations [L,R=301]
    
    # Rendre les fichiers et dossiers existants sans réécriture
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-l
    
    # Réécrire toutes les autres requêtes vers index.html
    RewriteRule ^ index.html [QSA,L]
</IfModule>

# Autoriser les CORS pour les polices Google
<FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|svg)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

